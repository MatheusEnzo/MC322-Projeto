import javafx.application.Application;
import javafx.geometry.Insets;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;

public class WriteReadArquivo extends Application {

    private ArquivoArtigo arquivoArtigo;
    private ArquivoLivro arquivoLivro;
    private ArquivoRevista arquivoRevista;
    private ArquivoMembro arquivoMembro;

    public static void main(String[] args) {
        launch(args);
    }

    @Override
    public void start(Stage primaryStage) {
        arquivoArtigo = new ArquivoArtigo();
        arquivoLivro = new ArquivoLivro();
        arquivoRevista = new ArquivoRevista();
        arquivoMembro = new ArquivoMembro();

        primaryStage.setTitle("WriteReadArquivo");

        Button lerArtigosButton = new Button("Ler Artigos");
        lerArtigosButton.setOnAction(e -> {
            arquivoArtigo.lerArquivo(null);
            // Faça algo com os dados lidos dos artigos
        });

        Button gravarArtigosButton = new Button("Gravar Artigos");
        gravarArtigosButton.setOnAction(e -> {
            arquivoArtigo.gravarArtigo();
            // Faça algo após gravar os artigos
        });

        Button lerLivrosButton = new Button("Ler Livros");
        lerLivrosButton.setOnAction(e -> {
            arquivoLivro.lerArquivo();
            // Faça algo com os dados lidos dos livros
        });

        Button gravarLivrosButton = new Button("Gravar Livros");
        gravarLivrosButton.setOnAction(e -> {
            arquivoLivro.gravarArquivo();
            // Faça algo após gravar os livros
        });

        Button lerRevistasButton = new Button("Ler Revistas");
        lerRevistasButton.setOnAction(e -> {
            arquivoRevista.lerArquivo();
            // Faça algo com os dados lidos das revistas
        });

        Button gravarRevistasButton = new Button("Gravar Revistas");
        gravarRevistasButton.setOnAction(e -> {
            arquivoRevista.gravarArquivo();
            // Faça algo após gravar as revistas
        });

        Button lerMembrosButton = new Button("Ler Membros");
        lerMembrosButton.setOnAction(e -> {
            arquivoMembro.lerArquivo();
            // Faça algo com os dados lidos dos membros
        });

        Button gravarMembrosButton = new Button("Gravar Membros");
        gravarMembrosButton.setOnAction(e -> {
            arquivoMembro.gravarArquivo();
            // Faça algo após gravar os membros
        });

        VBox vbox = new VBox(10);
        vbox.setPadding(new Insets(10));
        vbox.getChildren().addAll(lerArtigosButton, gravarArtigosButton, lerLivrosButton, gravarLivrosButton,
                lerRevistasButton, gravarRevistasButton, lerMembrosButton, gravarMembrosButton);

        Scene scene = new Scene(vbox, 400, 300);
        primaryStage.setScene(scene);
        primaryStage.show();
    }
}
